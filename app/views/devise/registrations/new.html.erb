<div class="column">
  <h1 class="title is-2">Sign Up</h1>
  <h2 class="subtitle is-4">It's quick and easy.</h2>
</div>

<div class="column">
  <div id="form-container" class="box new-user">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div id="first-last">
          <%= f.input :first_name,
                      placeholder: 'First Name',
                      label: false,
                      required: true %>
          <%= f.input :last_name,
                      placeholder: 'Last Name',
                      label: false,
                      required: true %>
        </div>
        <%= f.input :username,
                    placeholder: 'Username',
                    label: false,
                    required: true %>
        <%= f.input :email,
                    placeholder: 'Email',
                    label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    placeholder: 'New Password',
                    label: false,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    placeholder: 'Confirm Password',
                    label: false,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <hr>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "form-page-btns other-opts" %>
      </div>
    <% end %>

    <div class="columns">
      <div class="column">
        <%= link_to "Log in", new_session_path(resource_name), class: "form-nav" %><br />
      </div>

      <div class="column">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "form-nav" %><br />
        <% end %>
      </div>
    </div>

  </div>
</div>


