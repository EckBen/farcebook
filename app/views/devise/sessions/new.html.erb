<div class="column">
  <h1 class="title is-2">farcebook</h1>
  <h2 class="subtitle is-4">Welcome! Please log in.</h2>
</div>

<div class="column">
  <div id="form-container" class="box">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    placeholder: 'Email',
                    label: false,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    placeholder: 'Password',
                    label: false,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.hidden_field :remember_me, input_html: { value: true } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "form-page-btns login" %>
      </div>
    <% end %>

    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "button login form-page-btns" %>
    <% end %>

    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "form-nav" %><br />

    <hr>
    
    <%= link_to "Create New Account", new_registration_path(resource_name), class: "button other-opts form-page-btns" %>
  </div>
</div>