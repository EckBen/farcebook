<%= simple_form_for(@textpost, url: posts_path, html: { method: :post }) do |f| %>
  <div class="form-inputs">
    <%= f.input :post_body,
                required: true,
                label: "Body",
                placeholder: "What do you want to say?",
                input_html: { autocomplete: "post_body", rows: '5', class: "post_body" }%>
  </div>

  <div class="form-actions post-submit-wrapper">
    <%= f.button :submit, "Submit", class: "submit-post" %>
    <div class="switcher add-pic">Add picture</div>
  </div>
<% end %>