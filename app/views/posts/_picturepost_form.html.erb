<%= simple_form_for(@picturepost, url: posts_path, html: { method: :post }) do |f| %>
  <div class="form-inputs">
    <%= f.input :picture_title,
                required: false,
                label: "Post title",
                placeholder: "Make it catchy" %>
    <%= f.input :picture_body,
                required: false,
                label: "Body",
                placeholder: "What do you want to say?",
                input_html: { rows: '5', class: "post_body" }%>
    <%= f.input :picture_url,
                required: true,
                label: "Picture URL",
                placeholder: "Direct link to desired picture" %>
  </div>

  <div class="form-actions post-submit-wrapper">
    <%= f.button :submit, "Submit", class: "submit-post" %>
    <div class="switcher text-only">No picture</div>
  </div>
<% end %>